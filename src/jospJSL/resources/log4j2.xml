<Configuration status="WARN">

    <Appenders>

        <!-- STANDARD CONSOLE -->

        <!-- Standard console output -->
        <!-- This appender print INFO messages or higher level messages send by
        loggers -->
        <Console name="ConsoleStd" target="SYSTEM_OUT">
            <Filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout alwaysWriteExceptions="false"
                           pattern="%highlight{%d{DEFAULT} [ %-5level | # %-11.11markerSimpleName # | %-15.-15threadName | %-30.30logger{1.} ] %msg}%n"/>
        </Console>

        <!-- Development console output -->
        <!-- This appender print all messages send by loggers -->
        <Console name="ConsoleStd_DEV" target="SYSTEM_OUT">
            <PatternLayout alwaysWriteExceptions="true"
                           pattern="%highlight{%d{DEFAULT} [ %-5level | # %-11.11markerSimpleName # | %-15.-15threadName | %-30.30logger{1.} ] %msg}%n"/>
        </Console>


        <!-- JOSP CONSOLE -->

        <!-- Standard JOSP console output -->
        <!-- Default appender for JOSP loggers. It filters and prints only JOSP
        main components's logs (aka. SubSystems). It print only INFO or higher
        level messages.
        It's aim is to help log readers understand the JOSP program procedures
        and states. -->
        <Console name="ConsoleJOSP" target="SYSTEM_OUT">
            <Filters>
                <!--<MarkerFilter marker="MAIN_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <MarkerFilter marker="EXT_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>
                <MarkerFilter marker="SUB_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>
                <MarkerFilter marker="IMPL_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout alwaysWriteExceptions="false"
                           pattern="%highlight{%d{DEFAULT} [ %-5level | %-15.15markerSimpleName | %-15.-15threadName | %-30.30logger{1.} ] %msg}%n"/>
        </Console>

        <!-- Development JOSP console output -->
        <!-- Appender for JOSP loggers for development purposes. It prints all JOSP
        components's logs and not only main components. Normally it's applied to
        the component logger of components under development. -->
        <Console name="ConsoleJOSP_DEV" target="SYSTEM_OUT">
            <Filters>
                <!--<MarkerFilter marker="MAIN_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <MarkerFilter marker="EXT_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>
                <!--<MarkerFilter marker="SUB_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <MarkerFilter marker="IMPL_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout alwaysWriteExceptions="true"
                           pattern="%highlight{%d{DEFAULT} [ %-5level | %-15.15markerSimpleName | %-15.-15threadName | %-30.30logger{1.} ] %msg}%n"/>
        </Console>

        <!-- Implementation JOSP console output -->
        <!-- Appender for JOSP loggers for extensions implementation purposes.
        It prints all log messages from extra JOSP classes. -->
        <Console name="ConsoleJOSP_IMPL" target="SYSTEM_OUT">
            <Filters>
                <!--<MarkerFilter marker="MAIN_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <MarkerFilter marker="EXT_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>
                <!--<MarkerFilter marker="SUB_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <!--<MarkerFilter marker="IMPL_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout alwaysWriteExceptions="true"
                           pattern="%highlight{%d{DEFAULT} [ %-5level | %-15.15markerSimpleName | %-15.-15threadName | %-30.30logger{1.} ] %msg}%n"/>
        </Console>

        <!-- Full JOSP console output -->
        <!-- Appender for JOSP loggers that print all messages send by loggers. -->
        <Console name="ConsoleJOSP_FULL" target="SYSTEM_OUT">
            <PatternLayout alwaysWriteExceptions="true"
                           pattern="%highlight{%d{DEFAULT} [ %-5level | %-15.15markerSimpleName | %-15.-15threadName | %-30.30logger{1.} ] %msg}%n"/>
        </Console>


        <!-- JOSP FILES -->

        <!-- Standard JOSP file output -->
        <!-- Default appender for JOSP loggers on file. It prints only JOSP
        main and sub components's logs. It print only INFO or higher
        level messages. -->
        <RollingFile name="FileInfo" fileName="logs/jsl.log"
                     filePattern="logs/jsl-%d{yyyyMMdd_HHmmss}-%i.log.gz"
                     append="true">
            <Filters>
                <!--<MarkerFilter marker="MAIN_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <MarkerFilter marker="EXT_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>
                <!--<MarkerFilter marker="SUB_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <MarkerFilter marker="IMPL_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout alwaysWriteExceptions="false"
                           pattern="%d{DEFAULT} [ %-5level | %-15.15markerSimpleName | %-15.-15threadName | %-30.30logger{1.} ] %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5 MB"/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingFile>

        <!-- Full JOSP file output -->
        <!-- Default appender for JOSP loggers on file. It prints all log messages. -->
        <RollingFile name="FileFull" fileName="logs/jsl_full.log"
                     filePattern="logs/jsl_full-%d{yyyyMMdd_HHmmss}-%i.log.gz"
                     append="true">
            <Filters>
                <!--<MarkerFilter marker="MAIN_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <!--<MarkerFilter marker="EXT_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <!--<MarkerFilter marker="SUB_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <!--<MarkerFilter marker="IMPL_COMP" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout alwaysWriteExceptions="false"
                           pattern="%d{DEFAULT} [ %-5level | %-15.15markerSimpleName | %-15.-15threadName | %-30.30logger{1.} ] %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5 MB"/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingFile>

    </Appenders>


    <Loggers>

        <Root additivity="false" level="ALL">
            <AppenderRef ref="ConsoleStd"/>
        </Root>

        <!-- Commons -->

        <Logger name="com.robypomper.communication" additivity="false">
            <AppenderRef ref="ConsoleStd"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

        <Logger name="com.robypomper.discovery" additivity="false">
            <AppenderRef ref="ConsoleStd"/>
            <AppenderRef ref="FileFull"/>
        </Logger>


        <!-- JSL -->

        <Logger name="com.robypomper.josp" additivity="false">
            <AppenderRef ref="ConsoleJOSP"/>
            <AppenderRef ref="FileInfo"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

        <Logger name="com.robypomper.josp.core.jcpclient" additivity="false">
            <AppenderRef ref="ConsoleJOSP"/>
            <AppenderRef ref="FileInfo"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

        <Logger name="com.robypomper.josp.jsl.jcpclient" additivity="false">
            <AppenderRef ref="ConsoleJOSP"/>
            <AppenderRef ref="FileInfo"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

        <Logger name="com.robypomper.josp.jsl.srvinfo" additivity="false">
            <AppenderRef ref="ConsoleJOSP"/>
            <AppenderRef ref="FileInfo"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

        <Logger name="com.robypomper.josp.jsl.user" additivity="false">
            <AppenderRef ref="ConsoleJOSP"/>
            <AppenderRef ref="FileInfo"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

        <Logger name="com.robypomper.josp.jsl.objs" additivity="false">
            <AppenderRef ref="ConsoleJOSP"/>
            <AppenderRef ref="FileInfo"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

        <Logger name="com.robypomper.josp.jsl.comm" additivity="false">
            <AppenderRef ref="ConsoleJOSP"/>
            <AppenderRef ref="FileInfo"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

        <Logger name="com.robypomper.josp.jsl.shell" additivity="false">
            <AppenderRef ref="ConsoleJOSP"/>
            <AppenderRef ref="FileInfo"/>
            <AppenderRef ref="FileFull"/>
        </Logger>

    </Loggers>

</Configuration>