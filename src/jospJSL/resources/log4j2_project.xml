<Configuration xmlns:xi="http://www.w3.org/2001/XInclude" status="warn">
    <Properties>
        <Property name="filename_base">jospJSL</Property>
    </Properties>

    <Appenders>
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/error-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/error-dark-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/error-file-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/info-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/info-dark-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/info-file-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/debug-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/debug-dark-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/debug-file-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/trace-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/trace-dark-DEV.xml" />
        <xi:include href="file:../../../../src/jospCommons/resources/log4j2/appenders/trace-file-DEV.xml" />
    </Appenders>

    <Loggers>

        <Logger name="com.robypomper" additivity="false">
            <AppenderRef ref="debug-dark"/>
            <AppenderRef ref="error-file"/>
            <AppenderRef ref="info-file"/>
        </Logger>

        <Logger name="com.robypomper.josp" additivity="false">
            <AppenderRef ref="debug"/>
            <AppenderRef ref="error-file"/>
            <AppenderRef ref="info-file"/>
            <AppenderRef ref="debug-file"/>
        </Logger>

        <Logger name="com.robypomper.josp.jcp" additivity="false">
            <AppenderRef ref="debug"/>
            <AppenderRef ref="error-file"/>
            <AppenderRef ref="info-file"/>
            <AppenderRef ref="debug-file"/>
        </Logger>

        <Root additivity="false" level="ALL">
            <AppenderRef ref="info-dark"/>
            <AppenderRef ref="error-file"/>
            <AppenderRef ref="info-file"/>
        </Root>

    </Loggers>

</Configuration>
